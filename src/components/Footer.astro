---
import { getImage } from "astro:assets";
import bgFooter from "@assets/imgs/bgFooter.png"; // <- tu asset

// Optimiza y devuelve una sola URL para usar como background-image
const optimizedBg = await getImage({
  src: bgFooter,
  widths: [375, 768, 1024, 1920],
  formats: ["avif", "webp", "jpeg"],
  quality: 80,
});
---

<section
  class="relative isolate bg-cover bg-no-repeat
         bg-position-[bottom_-10px_center]
         lg:bg-position-[bottom_-200px_center]
         xl:bg-position-[bottom_-500px_center]
         text-white"
  style={`background-image: url(${optimizedBg.src});`}
>
  <div class="container mx-auto px-4">
    <div class="text-center py-16 md:py-20 lg:py-24 xl:py-32">
      <h1
        class="font-desert text-2xl leading-tight tracking-wide
        text-gold md:text-3xl"
      >
        PREPARE TO STAR IN THE MOST MYSTERIOUS, UNFORGETTABLE, AND SEDUCTIVE
        ARABIAN STORY YET.
      </h1>
      <p
        class="mt-4 text-sm leading-relaxed text-gold
        md:text-base lg:text-lg xl:text-xl"
      >
        A collection by Basmar Beauty: where we craft fragrances not just to
        wear, but to transform.
      </p>

      <!-- Separador fino -->
    </div>

    <hr class="mx-auto h-px w-9/10 border-0 bg-[#C56C2D]" />

    <!-- Franja inferior: retailers + social -->
    <div
      class="mt-6 flex flex-col items-center gap-4 pb-5
      md:mt-8 md:flex-row md:items-center md:justify-between"
    >
      <!-- Nombres de retailers (texto) -->
      <div class="text-base text-gold md:text-sm">
        <span class="text-center block md:inline md:text-left"
          >Buy your Zahreens fragrance at</span
        >
        <span
          class="mt-1 inline-flex flex-wrap justify-center gap-x-4 gap-y-1 md:mt-0 md:gap-x-6"
        >
          <span class="">TJ Maxx</span>
          <span class="">TK Maxx</span>
          <span class="">Marshalls</span>
          <span class="">Winners</span>
        </span>
      </div>

